<body class="body-login">
  <div class="login-container">
    <form action="/api/sessions/login" method="POST" class="login-form">
      <h2>Bienvenido</h2>
      <div class="input-group">
        <input type="text" name="email" placeholder="Email" required />
      </div>
      <div class="input-group">
        <input
          type="password"
          name="password"
          placeholder="Password"
          required
        />
      </div>
      <button type="submit" class="btn">Iniciar sesion</button>
      <p class="signup-link">No formas parte de esta familia?
        <a href="/register">Registrate aqui</a></p>
    </form>
  </div>
</body>