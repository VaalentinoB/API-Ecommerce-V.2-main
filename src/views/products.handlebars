<header>

  <h1>Bienvenido, {{user.first_name}} !</h1>

</header>

<div class="container">
  <h1>Productos</h1>
  {{#each productos}}
    <div class="product">
      <h2>{{title}}</h2>
      <p>{{id}}</p>
      <p>{{description}}</p>
      <p>Price: ${{price}}</p>
      <p>Category: {{category}}</p>
      <button>Agregar al Carrito</button>
    </div>
  {{/each}}

  <div class="pagination">
    {{#if hasPrevPage}}
      <a href="/products?page={{prevPage}}">Anterior</a>
    {{/if}}
    {{#if hasNextPage}}
      <a href="/products?page={{nextPage}}">Siguiente</a>
    {{/if}}
  </div>

  <p class="page-info">Pagina {{currentPage}} de {{totalPages}}</p>
</div>